public class Training {

    public static String abbrevName(String name) {

        name = name.toUpperCase();
        String s[] = name.split(" ");
        String fin = "";

        for (int i = 0; i < s.length; i++) {

            fin = fin + s[i].charAt(0) + ".";


        }


        return fin.substring(0,fin.length()-1);
    }
}


